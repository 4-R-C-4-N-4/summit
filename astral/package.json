{
  "name": "astral",
  "version": "0.1.0",
  "description": "Desktop UI for Summit Protocol",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run vite\" \"wait-on http://localhost:5173 && electron .\"",
    "vite": "vite",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder",
    "build:all": "npm run build && electron-builder -mwl"
  },
  "keywords": [
    "astral",
    "summit",
    "p2p",
    "mesh",
    "networking"
  ],
  "author": "Ivy Dearest",
  "email": "4rc4n4.game@protonmail.com",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "vite": "^6.4.1",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.astral.ui",
    "productName": "astral",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "!node_modules/**/*",
      "node_modules/electron/**/*"
    ],
    "linux": {
      "target": ["AppImage"],
      "category": "Network",
      "maintainer": "4rc4n4.game@protonmail.com",
      "synopsis": "Summit Protocol Desktop UI"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.networking"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    }
  }
}
